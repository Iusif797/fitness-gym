{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "build/static/$1"
    },
    {
      "src": "/(.*)\\.(.*)",
      "dest": "build/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "build/index.html"
    }
  ]
} 